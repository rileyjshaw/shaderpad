{
	"name": "shaderpad",
	"version": "1.0.0-beta.18",
	"description": "A lightweight, dependency-free library to reduce boilerplate when writing fragment shaders.",
	"keywords": [
		"shaders",
		"webgl",
		"frontend"
	],
	"author": "rileyjshaw",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./plugins/face": {
			"import": "./dist/plugins/face.mjs",
			"require": "./dist/plugins/face.js"
		},
		"./plugins/helpers": {
			"import": "./dist/plugins/helpers.mjs",
			"require": "./dist/plugins/helpers.js"
		},
		"./plugins/save": {
			"import": "./dist/plugins/save.mjs",
			"require": "./dist/plugins/save.js"
		},
		"./plugins/pose": {
			"import": "./dist/plugins/pose.mjs",
			"require": "./dist/plugins/pose.js"
		},
		"./plugins/hands": {
			"import": "./dist/plugins/hands.mjs",
			"require": "./dist/plugins/hands.js"
		}
	},
	"typesVersions": {
		"*": {
			"plugins/face": [
				"dist/plugins/face.d.ts"
			],
			"plugins/helpers": [
				"dist/plugins/helpers.d.ts"
			],
			"plugins/save": [
				"dist/plugins/save.d.ts"
			],
			"plugins/pose": [
				"dist/plugins/pose.d.ts"
			],
			"plugins/hands": [
				"dist/plugins/hands.d.ts"
			]
		}
	},
	"sideEffects": false,
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts src/plugins/*.ts"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.12",
		"tsup": "^8.3.5",
		"typescript": "^5.7.3"
	},
	"peerDependencies": {
		"@mediapipe/tasks-vision": "*"
	},
	"license": "GNU GPLv3"
}
